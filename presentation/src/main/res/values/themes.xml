<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--============-->
    <!-- Base Theme -->
    <!--============-->
    <style name="Theme" parent="Theme.AppCompat.Light.NoActionBar" />

    <!--==============-->
    <!-- Light Themes -->
    <!--=======-======-->
    <style name="Theme.Light">
        <!-- Primary Colors -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Widget Colors -->
        <item name="actionBarTheme">@style/Theme.ActionBar.Light</item>
        <item name="dialogColor">@color/colorDialog</item>
        <item name="rippleColor">@color/colorRipple</item>

        <!-- Navigation Colors -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">?colorPrimaryDark</item>
    </style>

    <!--=============-->
    <!-- Dark Themes -->
    <!--=============-->
    <style name="Theme.Dark" parent="Theme.AppCompat.NoActionBar">
        <!-- Primary Colors -->
        <item name="colorPrimary">@color/colorDarkPrimary</item>
        <item name="colorPrimaryDark">@color/colorDarkPrimaryDark</item>
        <item name="colorAccent">@color/colorAccentDark</item>

        <!-- Widget Colors -->
        <item name="actionBarTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="dialogColor">@color/colorDarkDialog</item>
        <item name="rippleColor">@color/colorDarkRipple</item>

        <!-- Navigation Colors -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">?colorPrimaryDark</item>
    </style>

    <!-- Tachiyomi Accent -->
    <style name="Theme.Dark.Blue">
        <!-- Primary Colors -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--==============-->
    <!-- Amoled Theme -->
    <!--==============-->
    <style name="Theme.Amoled" parent="Theme.Dark">
        <!-- Primary Colors -->
        <item name="colorPrimary">@color/colorAmoledPrimary</item>
        <item name="colorPrimaryDark">@color/colorAmoledPrimary</item>
        <item name="android:colorBackground">@color/md_black_1000</item>

        <!-- Widget Colors -->
        <item name="dialogColor">@color/colorAmoledDialog</item>

        <!-- Navigation Colors -->
        <item name="android:navigationBarColor">@color/colorAmoledPrimary</item>
    </style>

    <!--==============-->
    <!-- Reader Theme -->
    <!--==============-->
    <style name="Theme.Dark.Reader" />

</resources>
