<?xml version="1.0" encoding="utf-8"?>
<resources>
  <!--============-->
  <!-- Base Theme -->
  <!--============-->
  <style name="Theme" parent="Theme.AppCompat.Light.NoActionBar" />

  <!--==============-->
  <!-- Light Theme -->
  <!--=======-======-->
  <style name="Theme.Light">
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="rippleColor">@color/colorRipple</item>

    <item name="actionBarTheme">@style/Theme.ActionBar.Light</item>
    <item name="dialogColor">@color/colorDialog</item>
  </style>

  <style name="Theme.Tachiyomi" parent="Theme.Light">
    <!-- Attributes specific for SDK 19 to SDK 20 -->
  </style>

  <!--============-->
  <!-- Dark Theme -->
  <!--============-->
  <style name="Theme.Dark" parent="Theme.AppCompat.NoActionBar">
    <item name="colorPrimary">@color/colorDarkPrimary</item>
    <item name="colorPrimaryDark">@color/colorDarkPrimaryDark</item>
    <item name="colorAccent">@color/colorDarkAccent</item>
    <item name="rippleColor">@color/colorDarkRipple</item>

    <item name="dialogColor">@color/colorDarkDialog</item>
  </style>

  <style name="Theme.Tachiyomi.Dark" parent="Theme.Dark">
    <!-- Attributes specific for SDK 16 to SDK 20 -->
  </style>

  <!--==============-->
  <!-- Amoled Theme -->
  <!--==============-->
  <style name="Theme.Amoled" parent="Theme.Dark">
    <item name="colorPrimary">@color/colorAmoledPrimary</item>
    <item name="colorPrimaryDark">@color/colorAmoledPrimaryDark</item>
    <item name="colorAccent">@color/colorDarkAccent</item>

    <item name="dialogColor">@color/colorAmoledDialog</item>
    <item name="android:colorBackground">@color/colorAmoledBackground</item>
  </style>

  <style name="Theme.Tachiyomi.Amoled" parent="Theme.Amoled">
    <!-- Attributes specific for SDK 16 to SDK 20 -->
  </style>
</resources>
