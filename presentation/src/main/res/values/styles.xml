<?xml version="1.0" encoding="utf-8"?>
<resources>
  <!--========-->
  <!--Toolbars-->
  <!--========-->
  <style name="Theme.ActionBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

  <style name="Theme.ActionBar.Light">
    <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
  </style>

  <!--=======-->
  <!--Widgets-->
  <!--=======-->
  <style name="Theme.Widget" />

  <!--Widget.Button-->
  <style name="Theme.Widget.Button" parent="Base.Widget.AppCompat.Button" />

  <!--Widget.Button.Borderless-->
  <style name="Theme.Widget.Button.Flat" parent="Widget.AppCompat.Button.Borderless.Colored" />

  <!--Widget.Gridview-->
  <style name="Theme.Widget.RecyclerView">
    <item name="android:smoothScrollbar">true</item>
    <item name="android:numColumns">auto_fit</item>
    <item name="android:stretchMode">columnWidth</item>
    <item name="android:scrollbarStyle">outsideOverlay</item>
  </style>

  <!--===============-->
  <!--Text Appearance-->
  <!--===============-->
  <style name="TextAppearance" />

  <style name="TextAppearance.Headline" parent="@style/MaterialTypography.Regular.Headline" />

  <style name="TextAppearance.Title" parent="@style/MaterialTypography.Regular.Title" />

  <style name="TextAppearance.Subheading" parent="@style/MaterialTypography.Regular.Subheading" />

  <style name="TextAppearance.Body2" parent="@style/MaterialTypography.Regular.Body2" />

  <style name="TextAppearance.Body1" parent="@style/MaterialTypography.Regular.Body1" />

  <style name="TextAppearance.Body1.Light">
    <item name="android:textColor">@color/textColorPrimaryInverse</item>
  </style>

  <style name="TextAppearance.Caption" parent="@style/MaterialTypography.Regular.Caption" />

  <style name="TextAppearance.Caption.Light">
    <item name="android:textColor">@color/textColorPrimaryInverse</item>
  </style>

  <style name="TextAppearance.Button" parent="@style/MaterialTypography.Regular.Button" />

</resources>
