<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content">

  <android.support.constraint.ConstraintLayout
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="@dimen/material_list_single_line_with_avatar_normal_height"
    android:background="@drawable/background_ripple">

    <ImageView
      android:id="@+id/image"
      android:layout_width="@dimen/material_list_avatar_size"
      android:layout_height="@dimen/material_list_avatar_size"
      android:layout_marginStart="@dimen/material_list_avatar_margin_start"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:ignore="ContentDescription"
      tools:src="@mipmap/ic_launcher_round" />

    <TextView
      android:id="@id/title"
      android:layout_width="0dp"
      style="@style/TextAppearance.Title"
      android:layout_height="@dimen/material_list_avatar_size"
      android:layout_marginEnd="@dimen/material_list_text_last_position_margin_end"
      android:maxLines="1"
      android:layout_marginStart="@dimen/material_list_text_second_position_edge_margin_start"
      app:layout_constraintTop_toTopOf="parent"
      android:gravity="center_vertical"
      android:textSize="@dimen/material_list_normal_primary_text_size"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toStartOf="@+id/source_latest"
      app:layout_constraintStart_toStartOf="parent"
      tools:text="Source title"/>

    <Button
      android:id="@+id/source_latest"
      style="@style/Theme.Widget.Button.Flat"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/action_latest"
      android:paddingEnd="@dimen/material_card_actions_action_gutter_horizontal"
      android:paddingStart="@dimen/material_card_actions_row_padding"
      app:layout_constraintRight_toLeftOf="@+id/source_browse"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintTop_toTopOf="parent"/>


    <Button
      android:id="@+id/source_browse"
      style="@style/Theme.Widget.Button.Flat"
      android:paddingEnd="@dimen/material_card_actions_action_gutter_horizontal"
      android:paddingStart="0dp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/action_browse"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintTop_toTopOf="parent"/>

  </android.support.constraint.ConstraintLayout>

</FrameLayout>
