<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="@dimen/material_list_single_line_with_avatar_normal_height"
  android:layout_gravity="center_vertical"
  android:background="@drawable/background_ripple">

  <ImageView
    android:id="@+id/thumbnail"
    android:layout_width="@dimen/material_list_avatar_size"
    android:layout_height="@dimen/material_list_avatar_size"
    android:layout_gravity="center_vertical"
    android:layout_marginStart="@dimen/material_list_avatar_margin_start"
    tools:src="@mipmap/ic_launcher"
    tools:ignore="ContentDescription"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <TextView
    android:id="@id/title"
    android:layout_width="0dp"
    style="@style/TextAppearance.Title"
    android:textSize="@dimen/material_list_normal_primary_text_size"
    android:layout_height="@dimen/material_list_avatar_size"
    android:layout_marginEnd="@dimen/material_list_text_last_position_margin_end"
    android:maxLines="1"
    android:layout_marginStart="@dimen/material_list_text_second_position_edge_margin_start"
    tools:text="Manga title"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:gravity="center_vertical"
    app:layout_constraintEnd_toStartOf="@+id/download_text"
    app:layout_constraintStart_toStartOf="parent" />

  <TextView
    android:id="@+id/download_text"
    style="@style/TextAppearance.Caption.Light"
    android:layout_width="@dimen/material_list_icon_size"
    android:layout_height="@dimen/material_list_icon_size"
    android:maxLines="1"
    android:layout_marginEnd="@dimen/material_list_icon_last_position_margin_horizontal"
    android:background="@color/colorBadgeDownload"
    android:visibility="gone"
    android:gravity="center"
    app:layout_constraintEnd_toStartOf="@id/unread_text"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    tools:text="122"
    tools:visibility="visible" />

  <TextView
    android:id="@+id/unread_text"
    style="@style/TextAppearance.Caption.Light"
    android:layout_width="@dimen/material_list_icon_size"
    android:layout_height="@dimen/material_list_icon_size"
    android:maxLines="1"
    android:layout_marginEnd="@dimen/material_list_icon_last_position_margin_horizontal"
    android:background="@color/colorBadgeUnread"
    android:visibility="gone"
    android:gravity="center"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:text="130"
    tools:visibility="visible" />
</android.support.constraint.ConstraintLayout>
