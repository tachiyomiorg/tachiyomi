<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/nestedScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/manga_summary_layout"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp"
                    >

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/manga_backdrop"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:alpha="0.65"
                        android:background="?android:attr/textColorPrimaryInverse"/>

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/manga_cover"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@id/manga_cover"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/manga_status"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Ongoing"
                            android:textAppearance="@style/TextAppearance.Medium.Title.Accent"/>

                        <TextView
                            android:id="@+id/manga_source"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="KissManga"
                            android:textAppearance="@style/TextAppearance.Medium.Title"/>

                        <TextView
                            android:id="@+id/manga_chapters"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="825 Chapters"
                            android:textAppearance="@style/TextAppearance.Medium.Title"/>
                    </LinearLayout>
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/buttonLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/manga_summary_layout"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp">

                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/btn_add_to_library"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="?attr/selectable_list_drawable"
                        android:padding="8dp"
                        android:text="Remove from Library"
                        android:textAppearance="@style/TextAppearance.Medium.Button.NoCaps"/>

                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/btn_share"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="?attr/selectable_list_drawable"
                        android:padding="8dp"
                        android:text="Share"
                        android:textAppearance="@style/TextAppearance.Medium.Button.NoCaps"/>

                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/btn_open_in_browser"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="?attr/selectable_list_drawable"
                        android:padding="8dp"
                        android:text="Open In Browser"
                        android:textAppearance="@style/TextAppearance.Medium.Button.NoCaps"/>

                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/btn_sync_options"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="?attr/selectable_list_drawable"
                        android:padding="8dp"
                        android:text="Sync Options"
                        android:textAppearance="@style/TextAppearance.Medium.Button.NoCaps"/>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/score_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/buttonLayout"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8.9"
                        android:textAppearance="@style/TextAppearance.Regular.Display3"/>

                    <TextView
                        android:id="@+id/btn_rate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/score"
                        android:gravity="center"
                        android:padding="4dp"
                        android:text="Rate (8)"
                        android:textAppearance="@style/TextAppearance.Medium.Button"/>


                </LinearLayout>

                <android.support.v7.widget.CardView
                    android:id="@+id/manga_information"
                    style="@style/Theme.Widget.CardView"
                    android:layout_below="@id/score_layout">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <android.support.v7.widget.AppCompatImageView
                            android:id="@+id/information_backdrop"
                            android:layout_width="match_parent"
                            android:layout_height="?android:attr/listPreferredItemHeightSmall"
                            android:background="?attr/colorPrimary"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="?android:attr/listPreferredItemHeightSmall"
                            android:gravity="center_vertical"
                            android:paddingLeft="8dp"
                            android:text="Information"
                            android:textAppearance="@style/TextAppearance.Medium.Title.Light"/>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/information_backdrop"
                            android:padding="8dp">

                            <TextView
                                android:id="@+id/manga_author_label"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Author"
                                android:textAppearance="@style/TextAppearance.Medium.Body2"/>

                            <TextView
                                android:id="@+id/manga_author"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/manga_author_label"
                                android:text="Oda Eiichiro"
                                android:textAppearance="@style/TextAppearance.Regular.Body1"/>

                            <TextView
                                android:id="@+id/manga_artist_label"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/manga_author"
                                android:layout_marginTop="8dp"
                                android:text="Artist"
                                android:textAppearance="@style/TextAppearance.Medium.Body2"/>

                            <TextView
                                android:id="@+id/manga_artist"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/manga_artist_label"
                                android:text="Unknown"
                                android:textAppearance="@style/TextAppearance.Regular.Body1"/>

                            <TextView
                                android:id="@+id/manga_genres_label"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/manga_artist"
                                android:layout_marginTop="8dp"
                                android:text="Genres"
                                android:textAppearance="@style/TextAppearance.Medium.Body2"/>

                            <TextView
                                android:id="@+id/manga_genres"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/manga_genres_label"
                                android:singleLine="false"
                                android:text="Action, Adventure, Comedy, Drama, Fantasy, Manga, Martial ARts, Mystery, Shounen"
                                android:textAppearance="@style/TextAppearance.Regular.Body1"/>

                            <TextView
                                android:id="@+id/manga_summary_label"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/manga_genres"
                                android:layout_marginTop="8dp"
                                android:text="Summary"
                                android:textAppearance="@style/TextAppearance.Medium.Body2"/>

                            <TextView
                                android:id="@+id/manga_summary"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/manga_summary_label"
                                android:singleLine="false"
                                android:text="Greatness, Glory, Gold. A Pirate Named Gold Roger also known as the Pirate King has conquered this all. He was executed with an unknown reason but before he died he had revealed his last word about The legendary Treasure named One Piece which was hidden in the Grand Line. 22 years after his Death, A Pirate named Monkey D. Luffy appeared and has only one Goal, To Become the Next Pirate King and Find The Treasure One Piece. This Start The Never Ending Adventure. Monkey D. Luffy, inspired by his childhood hero Red-Haired Shanks, sets out on a journey to find the legendary treasure One Piece, to become the new Pirate King, and after eating the devil's fruit gains the power to do so. To accomplish this, he must reach the end of the most deadly and dangerous ocean: The Grand Line. But first he must find a crew."
                                android:textAppearance="@style/TextAppearance.Regular.Body1"/>
                        </RelativeLayout>
                    </RelativeLayout>

                </android.support.v7.widget.CardView>


            </RelativeLayout>
        </android.support.v4.widget.NestedScrollView>
    </android.support.v4.widget.SwipeRefreshLayout>
</android.support.design.widget.CoordinatorLayout>