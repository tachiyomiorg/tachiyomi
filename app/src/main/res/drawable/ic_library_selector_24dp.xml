<animated-selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:id="@+id/checked"
        android:drawable="@drawable/ic_library_filled_24dp"
        android:state_checked="true" />
    <item
        android:id="@+id/normal"
        android:drawable="@drawable/ic_library_outline_24dp"
        android:state_checked="false" />

    <transition
        android:drawable="@drawable/anim_library_filled_to_outline"
        android:fromId="@id/checked"
        android:toId="@id/normal" />

    <transition
        android:drawable="@drawable/anim_library_outline_to_filled"
        android:fromId="@id/normal"
        android:toId="@id/checked" />

</animated-selector>